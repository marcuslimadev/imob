{
  "family": "imobi-frontend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::575098225472:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "frontend",
      "image": "575098225472.dkr.ecr.sa-east-1.amazonaws.com/imobi-frontend:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "3000"
        },
        {
          "name": "NEXT_PUBLIC_DIRECTUS_URL",
          "value": "http://production-imobi-alb-1837293727.sa-east-1.elb.amazonaws.com"
        },
        {
          "name": "NEXT_PUBLIC_API_URL",
          "value": "http://production-imobi-alb-1837293727.sa-east-1.elb.amazonaws.com"
        },
        {
          "name": "DIRECTUS_INTERNAL_URL",
          "value": "http://172.31.7.78:8055"
        },
        {
          "name": "DIRECTUS_ADMIN_TOKEN",
          "value": "admin-static-token-imobi-2025"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/imobi-frontend",
          "awslogs-region": "sa-east-1",
          "awslogs-stream-prefix": "frontend",
          "awslogs-create-group": "true"
        }
      }
    }
  ]
}
