# Directus production environment for AWS EC2
# Copy to directus/.env.production and adjust the values before the first deploy.

# Database
DB_CLIENT=postgres
DB_HOST=database
DB_PORT=5432
DB_DATABASE=directus_prod
DB_USER=directus
DB_PASSWORD=CHANGEME_STRONG_DB_PASSWORD

# Cache
REDIS_HOST=cache
REDIS_PORT=6379
CACHE_ENABLED=true
CACHE_STORE=redis
CACHE_REDIS=redis://cache:6379

# Core application
PUBLIC_URL=https://directus.exclusivalarimoveis.com.br
KEY=CHANGEME_DIRECTUS_KEY
SECRET=CHANGEME_DIRECTUS_SECRET
CORS_ENABLED=true
CORS_ORIGIN=https://exclusivalarimoveis.com.br,https://www.exclusivalarimoveis.com.br

# Admin bootstrap
ADMIN_EMAIL=contato@exclusivalarimoveis.com.br
ADMIN_PASSWORD=STRONG_ADMIN_PASSWORD

# Tokens used by scripts/seeders
DIRECTUS_ADMIN_TOKEN=STATIC_TOKEN_FOR_SEEDING

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# External integrations
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_NUMBER=whatsapp:+5511999999999
